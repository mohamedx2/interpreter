{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Hamroun",
  "scopeName": "source.hamroun",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.hamroun",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.hamroun",
          "match": "\\b(SI|ALORS|SINON|FIN|BOUCLE|DE|A|TANT_QUE|FAIRE|RETOURNER|FONCTION|PROCEDURE)\\b"
        },
        {
          "name": "keyword.operator.logical.hamroun",
          "match": "\\b(ET|OU|NON)\\b"
        },
        {
          "name": "keyword.operator.comparison.hamroun",
          "match": "\\b(EGAL|DIFFERENT|PLUS_GRAND|PLUS_PETIT|PLUS_GRAND_OU_EGAL|PLUS_PETIT_OU_EGAL)\\b"
        },
        {
          "name": "keyword.other.hamroun",
          "match": "\\b(AFFICHER|LIRE|VRAI|FAUX)\\b"
        },
        {
          "name": "storage.type.hamroun",
          "match": "\\b(ENTIER|REEL|TEXTE|BOOLEEN|TABLEAU|LISTE)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.hamroun",
          "match": "\\+|\\-|\\*|\\/|%|\\^"
        },
        {
          "name": "keyword.operator.assignment.hamroun",
          "match": "="
        },
        {
          "name": "keyword.operator.comparison.hamroun",
          "match": "==|!=|>|<|>=|<="
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.hamroun",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.hamroun",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.hamroun",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.hamroun",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.decimal.hamroun",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.hamroun",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.hamroun",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.hamroun",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
